# Основная база данных (вы же понимаете, что это фейковыйе данные?)

DB_USERNAME         = ""
DB_PASSWORD         = ""
DB_DATABASE     = ""

# Path to storage (with tailing slash)

PATH.STORAGE    = ""

# Export directory (without tailing slash) from current

PATH.EXPORT.ALL         =   "_export"

# Правила выбора имени экспортируемого итема - directory|file|none
# directory - раскладываем по директориям
# file - делаем префикс имени
# other - префикс имени = `item` и кладём все в PATH.EXPORT.ALL
EXPORT.NAME_BY_TYPE     = 'directory'

PATH.EXPORT.ARTICLES        =   "_export/articles"
PATH.EXPORT.NEWS            =   "_export/news"

# Настройки TRIM
TRIM.AUTHOR = 1
TRIM.TITLE = 1
TRIM.LEAD = 1

# Общие настройки экспорта
EXPORT.MEDIA.ONLY_PRESENT_FILES = 0


# Настройки экспорта MEDIA:Title
MEDIA.TITLE.EXPORT_RAW = 0              # экспортировать сырые десериализованные данные
MEDIA.TITLE.EXPORT_ALWAYS = 0           # 1: экспортировать даже если данные пусты, иначе вернуть []
MEDIA.TITLE_EXPORT_TO_COLLECTION = 1       # экспортировать ли в коллекцию medias

# Настройки экспорта HTML-виджетов
MEDIA.HTML.EXPORT_STRING = 1
MEDIA.HTML.EXPORT_BASE64 = 0
MEDIA.HTML.EXPORT_RAW = 0
MEDIA.HTML.SAVE_DEBUG = 0

# Настройки экспорта MEDIA:inline media
MEDIA.MEDIA.EXPORT_RAW = 0              # сохранять ли исходные сырые данные?

